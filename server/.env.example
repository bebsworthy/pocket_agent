# Pocket Agent Server Configuration
# Copy this file to .env and customize as needed

# Server settings
POCKET_AGENT_PORT=8443
POCKET_AGENT_HOST=0.0.0.0
POCKET_AGENT_TLS_ENABLED=true
POCKET_AGENT_TLS_CERT_FILE=./certs/server.crt
POCKET_AGENT_TLS_KEY_FILE=./certs/server.key
POCKET_AGENT_DATA_DIR=./data
POCKET_AGENT_LOG_LEVEL=info
POCKET_AGENT_LOG_FILE=./logs/pocket-agent.log

# WebSocket settings
POCKET_AGENT_WEBSOCKET_READ_TIMEOUT=10m
POCKET_AGENT_WEBSOCKET_WRITE_TIMEOUT=10s
POCKET_AGENT_WEBSOCKET_PING_INTERVAL=5m
POCKET_AGENT_WEBSOCKET_PONG_TIMEOUT=30s
POCKET_AGENT_WEBSOCKET_MAX_MESSAGE_SIZE=1MB
POCKET_AGENT_WEBSOCKET_WRITE_BUFFER_SIZE=1024
POCKET_AGENT_WEBSOCKET_READ_BUFFER_SIZE=1024

# Execution settings
POCKET_AGENT_EXECUTION_COMMAND_TIMEOUT=5m
POCKET_AGENT_EXECUTION_MAX_PROJECTS=100
POCKET_AGENT_EXECUTION_MAX_LOG_SIZE=100MB
POCKET_AGENT_EXECUTION_MAX_MESSAGES_PER_LOG=10000
POCKET_AGENT_EXECUTION_CLAUDE_BINARY_PATH=claude