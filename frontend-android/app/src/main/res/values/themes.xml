<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.PocketAgent" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="android:colorPrimary">@color/md_theme_primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/md_theme_secondary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_background</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Window properties -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.PocketAgent.SplashScreen" parent="Theme.PocketAgent">
        <!-- Splash screen configuration can be added later -->
    </style>
</resources>